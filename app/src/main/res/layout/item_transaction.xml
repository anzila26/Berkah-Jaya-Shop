<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    android:layout_margin="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="order date"
                android:fontFamily="@font/poppins"/>
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="status"
                android:gravity="end"
                android:fontFamily="@font/poppins"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/grey"
            android:alpha="0.4"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="10dp">
                <ImageView
                    android:id="@+id/ivProductFirst"
                    android:layout_width="50dp"
                    android:layout_height="50dp"/>
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/tvProductName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Product Name first"
                    android:maxLines="1"
                    android:fontFamily="@font/poppins_semibold"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tvQuatity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 barang"
                    android:fontFamily="@font/poppins"
                    android:textSize="16sp"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tvProductLainnya"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+0 product lainnya"
                android:layout_margin="5dp"
                android:textSize="12sp"
                android:fontFamily="@font/poppins"/>
            <TextView
                android:id="@+id/tvLabelTotalHargaBarang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Total Harga"
                android:textSize="12sp"
                android:gravity="end"
                android:layout_marginStart="5dp"
                android:fontFamily="@font/poppins"/>
        </LinearLayout>
        <TextView
            android:id="@+id/tvTotalHarga"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Rp 100000"
            android:maxLines="1"
            android:textAlignment="viewEnd"
            android:layout_marginEnd="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:textSize="16sp"/>
    </LinearLayout>


</androidx.cardview.widget.CardView>